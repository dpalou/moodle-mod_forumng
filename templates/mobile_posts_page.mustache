{{!
    @template mod_forumng/mobile_posts_page

    Mobile view of the forumng posts listing page (forumng/discuss.php).

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * see example below
    * a limited number of posts are loaded initially, more dynamically via otherdata

    Example context (json):
    {
        postid: 444,
        subject: 'Discussion subject title',
        startedby: 'A student',
        startedbyurl: 'http://example.com/pictureurl',
        message: 'Root post message as html',
        starteddate: '10/5/2018',
        attachments: [
            {url: 'http://example.com/pictureurl', name: 'picturefilename.jpg'}
        ],
        isimportant:
        isflagged:
        isunread:
        isexpanded:
        canreply: 1
        cmid: 123,
        noofreplies: 3,
        hasreplies: true
    }

}}
{{=<% %>=}}
<div class="mma-forumng-posts-list-wrapper">
<ion-card>
    <%! Note no ion-card-header as it adds padding so mis-aligns the user image with the contents below. %>
    <ion-item>
        <ion-avatar item-start large>
            <img src="<% startedbyurl %>">
        </ion-avatar>
        <h2 text-wrap><% subject %></h2>
        <ion-row justify-content-between class="mma-forumng-row-max">
            <ion-col col-auto class="mma-forumng-col-unpad">
                <% startedby %>
            </ion-col>
            <ion-col col-auto class="mma-forumng-col-unpad">
                <span class="mma-forumng-gray-text mma-forumng-smaller-text"><% starteddate %></span>
            </ion-col>
        </ion-row>
    </ion-item>
    <ion-card-content>
        <core-format-text text="<%{ message }%>" component="mod_forumng" componentId="<% cmid %>" maxHeight="80" text-wrap></core-format-text>
        <ion-list>
            <%# attachments %>
            <%! Note this bit needs to be done with mustache templating. %>
            <core-file [file]="{fileurl: '<% url %>', filename: '<% name %>'}" component="mod_forumng" componentId="<% cmid %>"></core-file>
            <%/ attachments %>
        </ion-list>
        <ion-grid>
            <ion-row justify-content-between class="mma-forumng-row-max">
                <%# isflagged %>
                <ion-col col-auto class="mma-forumng-col-unpad">
                    <ion-icon name="flag" item-start class="mma-forumng-no-margin"></ion-icon>
                </ion-col>
                <%/ isflagged %>
                <ion-col col-auto class="mma-forumng-col-unpad">
                    <div class="mma-forumng-gray-text"><ion-icon name="chatboxes" item-start></ion-icon> <% noofreplies %></div>
                </ion-col>
                <ion-col *ngIf="<%{ isunread }%>" col-auto class="mma-forumng-col-unpad">
                    <div><span class="mma-forumng-gray-text">[MARK READ]</span></div>
                </ion-col>
                <ion-col *ngIf="<%{ canreply }%>" col-auto class="mma-forumng-col-unpad">
                    <div><span class="mma-forumng-gray-text">[REPLY]</span></div>
                </ion-col>
            </ion-row>
        </ion-grid>
    </ion-card-content>
</ion-card>
<%# hasreplies %>
<ion-list class="mma-forumng-posts-list" no-lines>
    <ion-item *ngFor="let reply of CONTENT_OTHERDATA.replies">
        <ion-card [id]="reply.postid">
            <ion-item>
                <ion-avatar item-start large>
                    <img [src]="reply.startedbyurl">
                </ion-avatar>
                <h2 text-wrap>{{ reply.subject }}</h2>
                <ion-row justify-content-between class="mma-forumng-row-max">
                    <ion-col col-auto class="mma-forumng-col-unpad">
                        {{ reply.startedby }}
                    </ion-col>
                    <ion-col col-auto class="mma-forumng-col-unpad">
                        <span class="mma-forumng-gray-text mma-forumng-smaller-text">{{ reply.starteddate }}</span>
                    </ion-col>
                </ion-row>
            </ion-item>
            <ion-card-content>
                <core-format-text [text]="reply.message" component="mod_forumng" componentId="<% cmid %>" maxHeight="60" text-wrap></core-format-text>
                <div *ngIf="reply.isexpanded">
                    <ion-list *ngFor="let attachment of reply.attachments">
                        <core-file [file]="{fileurl: attachment.url, filename: attachment.name}" component="mod_forumng" componentId="<% cmid %>"></core-file>
                    </ion-list>
                    <ion-grid>
                        <ion-row justify-content-between class="mma-forumng-row-max">
                            <ion-col *ngIf="reply.isflagged" col-auto class="mma-forumng-col-unpad">
                                <div class="mma-forumng-iconsize-correction"><ion-icon name="flag" item-start></ion-icon></div>
                            </ion-col>
                            <ion-col *ngIf="reply.isimportant" col-auto class="mma-forumng-col-unpad">
                                <div class="mma-forumng-iconsize-correction"><ion-icon name="alert" item-start></ion-icon></div>
                            </ion-col>
                            <ion-col *ngIf="reply.isunread" col-auto class="mma-forumng-col-unpad">
                                <div><span class="mma-forumng-gray-text">[MARK READ]</span></div>
                            </ion-col>
                            <ion-col *ngIf="reply.canreply" col-auto class="mma-forumng-col-unpad">
                                <div><span class="mma-forumng-gray-text">[REPLY]</span></div>
                            </ion-col>
                        </ion-row>
                    </ion-grid>
                </div>
                <ion-list *ngFor="let subreply of reply.subreplies">
                    <ion-item [id]="subreply.postid" class="mma-forumng-align-items-normal">
                        <ion-item>
                            <ion-avatar item-start>
                                <img [src]="subreply.startedbyurl" class="mma-forumng-smaller-img">
                            </ion-avatar>
                            <ion-row justify-content-between class="mma-forumng-row-max">
                                <ion-col col-auto class="mma-forumng-col-unpad">
                                    {{ subreply.startedby }}
                                </ion-col>
                                <ion-col col-auto class="mma-forumng-col-unpad">
                                    <span class="mma-forumng-gray-text mma-forumng-smaller-text">{{ subreply.starteddate }}</span>
                                </ion-col>
                            </ion-row>
                        </ion-item>
                        <div class="mma-forumng-smaller-text mma-forumng-indented">
                            <core-format-text [text]="subreply.message" component="mod_forumng" componentId="<% cmid %>" maxHeight="60" text-wrap></core-format-text>
                        </div>
                        <div *ngIf="subreply.isexpanded">
                            <ion-list *ngFor="let attach of subreply.attachments" class="mma-forumng-indented">
                                <core-file [file]="{fileurl: attach.url, filename: attach.name}" component="mod_forumng" componentId="<% cmid %>"></core-file>
                            </ion-list>
                            <ion-grid class="mma-forumng-indented">
                                <ion-row justify-content-between class="mma-forumng-row-max">
                                    <ion-col *ngIf="subreply.isflagged" col-auto class="mma-forumng-col-unpad">
                                        <div class="mma-forumng-iconsize-correction"><ion-icon name="flag" item-start></ion-icon></div>
                                    </ion-col>
                                    <ion-col *ngIf="subreply.isimportant" col-auto class="mma-forumng-col-unpad">
                                        <div class="mma-forumng-iconsize-correction"><ion-icon name="alert" item-start></ion-icon></div>
                                    </ion-col>
                                    <ion-col *ngIf="subreply.isunread" col-auto class="mma-forumng-col-unpad">
                                        <div><span class="mma-forumng-gray-text">[MARK READ]</span></div>
                                    </ion-col>
                                    <ion-col *ngIf="subreply.canreply" col-auto class="mma-forumng-col-unpad">
                                        <div><span class="mma-forumng-gray-text">[REPLY]</span></div>
                                    </ion-col>
                                </ion-row>
                            </ion-grid>
                        </div>
                    </ion-item>
                </ion-list>
            </ion-card-content>
        </ion-card>
    </ion-item>
    <ion-infinite-scroll (ionInfinite)="loadMorePosts($event)">
        <ion-infinite-scroll-content loadingSpinner="bubbles" loadingText="Loading more data..."></ion-infinite-scroll-content>
    </ion-infinite-scroll>
</ion-list>
<%/ hasreplies %>
</div>
